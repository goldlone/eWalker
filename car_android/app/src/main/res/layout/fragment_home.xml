<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/masterPanel">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="30dp">

        <LinearLayout
            android:id="@+id/btn_home_voice"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:background="@drawable/bg_home_card"
            android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_home_card_icon"
                    android:src="@mipmap/voice_white"
                    android:padding="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:gravity="bottom|center"
                    android:text="语音"
                    android:textColor="#424041"
                    android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_home_phone"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/bg_home_card"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:padding="25dp"
                android:background="@drawable/bg_home_card_icon"
                android:src="@mipmap/phone"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:gravity="bottom|center"
                android:text="电话"
                android:textColor="#424041"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_home_help"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:background="@drawable/bg_home_card"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:padding="25dp"
                android:background="@drawable/bg_home_card_icon"
                android:src="@mipmap/help"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:gravity="bottom|center"
                android:text="求救"
                android:textColor="#424041"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_home_person"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/bg_home_card"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:padding="25dp"
                android:background="@drawable/bg_home_card_icon"
                android:src="@mipmap/mine"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:gravity="bottom|center"
                android:text="个人中心"
                android:textColor="#424041"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>